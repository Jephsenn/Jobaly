{
  "name": "jobaly",
  "version": "1.0.0",
  "description": "Local-first web app for intelligent job search and application tracking",
  "author": "John Josephsen",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "vite",
    "dev:full": "concurrently \"vite\" \"vercel dev --listen 3001\"",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.20.0",
    "@types/file-saver": "^2.0.7",
    "clipboardy": "^4.0.0",
    "date-fns": "^3.3.0",
    "dexie": "^4.2.1",
    "docx": "^9.5.1",
    "docx-templates": "^4.15.0",
    "file-saver": "^2.0.5",
    "framer-motion": "^11.0.0",
    "lodash": "^4.17.21",
    "mammoth": "^1.11.0",
    "openai": "^4.28.0",
    "pdfjs-dist": "^5.4.449",
    "pizzip": "^3.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.50.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/sql.js": "^1.4.9",
    "@vercel/node": "^5.5.15",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.11"
  },
  "build": {
    "appId": "com.jobsearch.assistant",
    "productName": "JobTracker",
    "executableName": "JobTracker",
    "asar": false,
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "package.json",
      "node_modules/**/*",
      "!node_modules/@anthropic-ai/**/*",
      "!node_modules/openai/**/*",
      "!node_modules/**/*.mts",
      "!node_modules/**/*.d.mts",
      "!node_modules/**/*.mjs.map"
    ],
    "publish": {
      "provider": "github",
      "owner": "Jephsenn",
      "repo": "JobTracker"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "allowElevation": true
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Jephsenn/JobTracker.git"
  }
}
