{
  "name": "job-search-assistant",
  "version": "0.1.0",
  "description": "Local-first desktop app for intelligent job search assistance",
  "main": "dist/main/index.js",
  "author": "John Josephsen",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron": "cross-env NODE_ENV=development electron electron-dev.js",
    "build": "npm run build:renderer && npm run build:main",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "start": "electron .",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "package": "npm run build && electron-builder",
    "package:win": "npm run build && electron-builder --win",
    "package:mac": "npm run build && electron-builder --mac",
    "package:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.20.0",
    "clipboardy": "^4.0.0",
    "date-fns": "^3.3.0",
    "docx": "^9.5.1",
    "docx-templates": "^4.15.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.6.2",
    "framer-motion": "^11.0.0",
    "lodash": "^4.17.21",
    "mammoth": "^1.11.0",
    "openai": "^4.28.0",
    "pizzip": "^3.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.50.0",
    "sql.js": "^1.10.3",
    "winston": "^3.11.0",
    "zod": "^3.22.4",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/sql.js": "^1.4.9",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.2.0",
    "electron-builder": "^26.0.12",
    "electron-is-dev": "^3.0.1",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.11"
  },
  "build": {
    "appId": "com.jobsearch.assistant",
    "productName": "JobTracker",
    "asar": false,
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "package.json",
      "node_modules/**/*",
      "!node_modules/@anthropic-ai/**/*",
      "!node_modules/openai/**/*",
      "!node_modules/**/*.mts",
      "!node_modules/**/*.d.mts",
      "!node_modules/**/*.mjs.map"
    ],
    "publish": {
      "provider": "github",
      "owner": "Jephsenn",
      "repo": "JobTracker"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "allowElevation": true
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Jephsenn/JobTracker.git"
  }
}
