{
  "manifest_version": 3,
  "name": "Jobaly",
  "version": "1.0.0",
  "description": "AI-powered job search assistant - Automatically capture jobs and calculate match scores",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost/*",
    "https://*.vercel.app/*",
    "https://*.linkedin.com/*",
    "https://*.indeed.com/*",
    "https://*.glassdoor.com/*",
    "https://*.dice.com/*",
    "https://*.monster.com/*",
    "https://*.ziprecruiter.com/*",
    "https://*.angel.co/*",
    "https://*.wellfound.com/*",
    "https://jobs.lever.co/*",
    "https://*.greenhouse.io/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost:3000/*",
        "http://localhost:*/*",
        "https://*.vercel.app/*"
      ],
      "js": ["content-scripts/jobaly-app.js"],
      "run_at": "document_start"
    },
    {
      "matches": [
        "https://*.linkedin.com/*"
      ],
      "js": ["content-scripts/test.js", "content-scripts/linkedin.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://*.indeed.com/*"
      ],
      "js": ["content-scripts/indeed.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://*.glassdoor.com/*",
        "https://*.glassdoor.ca/*"
      ],
      "js": ["content-scripts/glassdoor.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
